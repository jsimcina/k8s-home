---
machine:
  network:
    hostname: home-node-01
    interfaces:
      - deviceSelector:
          hardwareAddr: 58:47:ca:7e:df:af
        ignore: true
      #TB Ring
      - deviceSelector:
          busPath: 0-1.0 # home-node-02
        dhcp: false
        mtu: 65520
        addresses:
          - 169.254.255.11/32
        routes:
          - network: 169.254.255.12/32
            metric: 2048
      - deviceSelector:
          busPath: 1-1.0 # home-node-03
        dhcp: false
        mtu: 65520
        addresses:
          - 169.254.255.11/32
        routes:
          - network: 169.254.255.13/32
            metric: 2048
  type: controlplane
  udev:
    rules:
    # Rename secondary adapter to eth1
      - SUBSYSTEM=="net", ACTION=="add", DRIVERS=="?*", ATTR{address}=="58:47:ca:7e:df:af", ATTR{type}=="1", NAME="eth1"